import { load_env_file, get_env_var } from "std/env"
import { file_write } from "std/fs"
main {
    let tmpdir = unsafe $mktemp -d /tmp/amber-XXXX$
    unsafe $cd {tmpdir}$
    unsafe file_write(".env", "TEST=1")
    load_env_file()
    if get_env_var("TEST") == "1" {
        echo "yes"
    }
    unsafe $rm -fr {tmpdir}$
} 
